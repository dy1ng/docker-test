<?xml version="1.0" encoding="UTF-8"?>
<build-type xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://www.jetbrains.com/teamcity/schemas/2021.1/project-config.xsd">
  <name>Build status check</name>
  <description />
  <settings>
    <parameters>
      <param name="teamcity.build.serviceMessages.logOriginal" value="true" />
    </parameters>
    <build-runners>
      <runner id="RUNNER_1" name="Successful build step" type="simpleRunner">
        <parameters>
          <param name="script.content"><![CDATA[#!/usr/local/bin/python3
print('This build step will exit with zero exit code')
exit(0)]]></param>
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
      <runner id="RUNNER_2" name="Run this step only if build is successful" type="simpleRunner">
        <parameters>
          <param name="script.content"><![CDATA[#!/usr/local/bin/python3
print('Build is still successful!')]]></param>
          <param name="teamcity.step.mode" value="execute_if_success" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
      <runner id="RUNNER_3" name="Set build status to FAILED" type="simpleRunner">
        <parameters>
          <param name="script.content"><![CDATA[#!/usr/local/bin/python3
print('The build will now fail!')
print('##teamcity[buildStatus status=\'FAILURE\' text=\'{build.status.text} let the build fail!\']')]]></param>
          <param name="teamcity.step.mode" value="execute_always" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
      <runner id="RUNNER_4" name="Step to be skipped" type="simpleRunner">
        <parameters>
          <param name="script.content"><![CDATA[#!/usr/local/bin/python3
print('This will never be printed')]]></param>
          <param name="teamcity.step.mode" value="execute_if_success" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
      <runner id="RUNNER_5" name="Set build status to SUCCESS (1)" type="simpleRunner">
        <parameters>
          <param name="script.content"><![CDATA[#!/usr/local/bin/python3
print('The build will now succeed!')
print('##teamcity[buildStatus status=\'SUCCESS\' text=\'{build.status.text} let the build succeed!\']')]]></param>
          <param name="teamcity.step.mode" value="execute_always" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings />
    <requirements />
    <build-triggers />
    <cleanup />
  </settings>
</build-type>

